{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "jsx": "preserve",
        "module": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "noImplicitAny": true,
        "skipLibCheck": true,
        "declaration": true,
        "incremental": false,
        "emitDeclarationOnly": false,
        "outDir": "dist",
        "declarationDir": "dist"
    },
    "include": [
        "src/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
